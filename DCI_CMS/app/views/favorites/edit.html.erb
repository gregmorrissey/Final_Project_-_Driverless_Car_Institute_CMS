<div class="page-header">
  <h1>Editing Favorite #<%= @favorite.id %></h1>
</div>

<%= form_tag(favorite_url(@favorite), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @favorite.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :post_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :post_id, @favorite.post_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Favorite", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
