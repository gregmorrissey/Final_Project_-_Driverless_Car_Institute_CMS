<div class="page-header">
  <h1>Tags</h1>
</div>

<p><%= link_to 'Add a New Tag', new_tag_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tag subject</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.tag_subject %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, tag_url(tag), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_tag_url(tag), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, tag_url(tag), method: 'delete', data: { confirm: "Do you really want to delete this tag?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

