<div class="page-header">
  <h1>New Tag</h1>
</div>

<%= form_tag(tags_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :tag_subject, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :tag_subject, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Tag", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
