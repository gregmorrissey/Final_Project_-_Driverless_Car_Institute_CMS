<h1>New Topic</h1>

<%= form_tag(topics_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :post_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <select name="post_id" class="form-control">
        <% Post.all.each do |post| %>

          <option value="<%= post.id %>">
            <%= post.title %>
          </option>

        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :tag_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-4">
      <select name="tag_id" class="form-control">
        <% Tag.all.each do |tag| %>

          <option value="<%= tag.id %>">
            <%= tag.name %>
          </option>

        <% end %>
      </select>
    </div>
  </div>

  <div>
    <%= submit_tag "Create Topic" %>
  </div>
<% end %>