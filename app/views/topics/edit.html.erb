<h1>Editing Topic</h1>

<%= form_tag(topic_url(@post_id, @tag_id), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :post_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <select name="post_id" class="form-control">
        <% Post.all.each do |post| %>
          <% if post.id == @post_id %>
            <% previously_selected = "selected" %>
          <% else %>
            <% previously_selected = "" %>
          <% end %>

          <option value="<%= post.id %>" <%= previously_selected %>>
            <%= post.title%>
          </option>

        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :tag_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <select name="tag_id" class="form-control">
        <% Tag.all.each do |tag| %>
          <% if tag.id == @tag_id %>
            <% previously_selected = "selected" %>
          <% else %>
            <% previously_selected = "" %>
          <% end %>

          <option value="<%= tag.id %>" <%= previously_selected %>>
            <%= tag.name%>
          </option>

        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Topic", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>