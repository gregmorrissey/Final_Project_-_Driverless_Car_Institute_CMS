<div class="page-header">
<h1>Topics</h1>
</div>

<p><%= link_to 'Add a New Topic', new_topic_url %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Post</th>
      <th>Tag</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @topics.each do |topic| %>
    <tr>
      <td><%= topic.post.title %></td>
      <td><%= topic.tag.name %></td>
      <td><%= link_to 'Show', topic_url(topic) %></td>
      <td><%= link_to 'Edit', edit_topic_url(topic) %></td>
      <td><%= link_to 'Destroy', topic_url(topic), method: 'delete', data: { confirm: "Do you really want to delete this topic?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

