<div class="page-header">
  <h1>Editing Comment #<%= @comment.id %></h1>
</div>

<%= form_tag(comment_url(@comment), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @comment.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :post_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :post_id, @comment.post_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :commented_on, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :commented_on, @comment.commented_on, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Comment", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
