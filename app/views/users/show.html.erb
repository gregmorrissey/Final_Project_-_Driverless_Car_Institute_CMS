<div class="page-header">
  <h1>Member Profile</h1>
</div>

<dl class="dl-horizontal">
  <dt>Username/Email</dt>
  <dd><%= @user.email %></dd>

  <dt>First name</dt>
  <dd><%= @user.first_name %></dd>

  <dt>Last name</dt>
  <dd><%= @user.last_name %></dd>

  <dt>City</dt>
  <dd><%= @user.city %></dd>

  <dt>State</dt>
  <dd><%= @user.state %></dd>

  <dt>Linkedin</dt>
  <dd><%= @user.linkedin %></dd>

  <dt>Twitter</dt>
  <dd><%= @user.twitter %></dd>

  <dt>Facebook</dt>
  <dd><%= @user.facebook %></dd>

<% if current_user.admin? %>
  <dt>Author?</dt>
  <dd><%= @user.author %></dd>

  <dt>Admin?</dt>
  <dd><%= @user.admin %></dd>

<% end %>


</dl>
