<div class="page-header">
  <h1>Editing Post #<%= @post.id %></h1>
</div>

<%= form_tag(post_url(@post), method: 'patch', class: 'form-horizontal') do %>
  
  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, @post.title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :published, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :published, @post.published, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :published_on, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :published_on, @post.published_on, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :post_text, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :post_text, @post.post_text, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Post", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
